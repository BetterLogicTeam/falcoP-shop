# ==========================================
# FALCO PEAK SHOP - Environment Variables
# ==========================================
# Copy this file to .env and fill in your values

# ==========================================
# DATABASE - Supabase PostgreSQL
# ==========================================
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/database

# Connection pooler for app (use port 6543 with pgbouncer)
DATABASE_URL="postgresql://postgres.[PROJECT_REF]:[PASSWORD]@aws-1-eu-west-2.pooler.supabase.com:6543/postgres?pgbouncer=true"

# Direct connection for migrations (use port 5432)
DIRECT_URL="postgresql://postgres.[PROJECT_REF]:[PASSWORD]@aws-1-eu-west-2.pooler.supabase.com:5432/postgres"

# ==========================================
# STRIPE - Payment Processing
# ==========================================
# Get these from: https://dashboard.stripe.com/apikeys

# Server-side secret key (starts with sk_test_ or sk_live_)
STRIPE_SECRET_KEY="sk_test_your_secret_key"

# Publishable key for server-side use
STRIPE_PUBLISHABLE_KEY="pk_test_your_publishable_key"

# Client-side publishable key (NEXT_PUBLIC_ prefix exposes to browser)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_publishable_key"

# ==========================================
# CLOUDINARY - Image Uploads
# ==========================================
# Get these from: https://console.cloudinary.com/settings/api-keys

CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# ==========================================
# NEXTAUTH - Authentication
# ==========================================
# Generate secret: openssl rand -base64 32

NEXTAUTH_SECRET="generate-a-secure-random-string-here"
NEXTAUTH_URL="http://localhost:3000"

# ==========================================
# EMAIL - SMTP (Optional)
# ==========================================
# For sending order confirmations, notifications, etc.

SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASSWORD=""
EMAIL_FROM=""
